@model IEnumerable<ProductCatalog.Models.Product>

<h1>Product Catalog</h1>

<div class="row">
    @foreach (var product in Model)

    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Description</p>
                    <p class="card-text"><strong>Price: </strong> @product.Price.ToString("C")</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="@Url.Action("Details", new { id = product.Id })" class="btn btn-primary">Details</a>
                        <a href="@Url.Action("Delete", new { id = product.Id })" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<a href="@Url.Action("Create")" class="btn btn-success">Add New Product</a>