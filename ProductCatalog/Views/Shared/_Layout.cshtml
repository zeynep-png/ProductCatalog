<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - ProductCatalog</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <style>
        /* Sayfa yapısını belirle */
        html, body {
            height: 100%;
        }

        /* Ana içerik kısmı */
        .content {
            flex: 1 0 auto; /* İçeriği sayfa boyutuna göre esnet */
        }

        /* Footer kısmı */
        .footer {
            flex-shrink: 0; /* Footer'ı sabit tut */
        }

        /* Sayfa ana düzeni */
        body {
            display: flex;
            flex-direction: column; /* Sayfa boyunca üstten alta yönlendirme */
        }
    </style>
</head>
<body>
   
    <header>
        <partial name="_navPartial" />
    </header>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <span class="text-muted">© 2024 ProductCatalog MadeBy Zeynep Tuana Çakır</span>
        </div>
    </footer>
</body>
</html>